pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Hacer checkout al repo
                checkout scm
            }
        }

        stage('Compile Java') {
            steps {
                script {
                    // Compilar
                    sh 'mkdir -p bin'
                    sh 'javac -d bin src/**/*.java'
                }
            }
        }

        stage('Archive Artifacts') {
            steps {
                // Archiva los binarios generados
                archiveArtifacts artifacts: 'bin/**/*', fingerprint: true
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}